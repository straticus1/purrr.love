# üîê Purrr.love Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
APP_ENV=development
APP_URL=https://purrr.love
API_URL=https://api.purrr.love

# Database Configuration
DB_HOST=localhost
DB_NAME=purrr_love
DB_USER=purrr_user
DB_PASS=your_secure_password_here
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
STABILITY_AI_API_KEY=your_stability_ai_api_key_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# Security Settings
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=1000
BURST_RATE_LIMIT=2000

# Logging
LOG_LEVEL=DEBUG
SECURITY_LOGGING=true
PERFORMANCE_LOGGING=true

# CORS Settings
CORS_ALLOWED_ORIGINS=https://purrr.love,https://www.purrr.love,https://app.purrr.love

# Development Settings
DEBUG_MODE=true
SHOW_ERRORS=true
CACHE_ENABLED=false

# Production Settings (override these in production)
# APP_ENV=production
# DEBUG_MODE=false
# SHOW_ERRORS=false
# CACHE_ENABLED=true
# LOG_LEVEL=ERROR
