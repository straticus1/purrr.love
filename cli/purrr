            case 'usage':
                if (count($args) < 2) {
                    echo "Usage: purrr keys usage <key_id>\n";
                    exit(1);
                }
                $this->showApiKeyUsage($args[1]);
                break;
                
            default:
                echo "Unknown keys action: $action\n";
                echo "Use: list, create, show, revoke, or usage\n";
                exit(1);
        }
    }
    
