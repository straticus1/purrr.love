                echo "  Session ID: {$response['data']['session_id']}\n";
                echo "  Room Type: $roomType\n";
                echo "  Participants: " . count($response['data']['participants']) . "\n";
            }
        } catch (Exception $e) {
            echo Colors::RED . "‚ùå Failed to join multiplayer room: " . $e->getMessage() . Colors::NC . "\n";
        }
    }

